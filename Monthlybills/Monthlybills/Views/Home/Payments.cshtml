@model IEnumerable<DatalayerMonthlyBills.Bill>

@{
    ViewBag.Title = "Payments";
}

<div class="row text-center"><h2>Payments</h2></div>

<p>
    @Html.ActionLink("Add New Bill", "AddBill")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BillName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.minPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PasswordHint)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BillName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.minPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PasswordHint)
        </td>
        <td>
            @Html.ActionLink("QuickPay", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Customize Payment", "Details", new { id=item.Id }) |
            @Html.ActionLink("History", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
